@using WebApplication1.Models
@model IEnumerable<WebApplication1.Models.News>
@using System.Text;

@{
    int count = 1;
}

@foreach (News n in Model)
{
    StringBuilder sb = new StringBuilder();
    string className = count % 2 == 0 ? "oneNews  col col-inline col-lg-offset-1 col-md-7 col-lg-7 " : "oneNews  col col-inline col-md-7 col-lg-7";
    ImageLink img = n.ImageLink;
    string url = img != null? Url.Content("~/Content/img/news/" + @img.Link): "";

    <article class="@className">
            <picture alt="@n.Title">
                <source src="@url" media="min-width:1170px">
                <source src="@url" media="min-width:480px">
                <source src="@url">
                <!-- для браузеров не поддерживающих тег -->
                <img src="@url">
            </picture>
        <h2 class="newsTitle">@n.Title</h2>
        <div>Published:</div>
        <section class="newsText">@n.Annonce</section>
        <a href="News/GetOneNews/@n.NewsId" class="lesMer greenButton">Les mer</a>
    </article>

    count++;
}
