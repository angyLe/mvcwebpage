@model WebApplication1.Models.news
@using WebApplication1.Models

@{
    ViewBag.Title = "NewsAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>NewsAdmin</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>news</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.siteoneelemId)

     
}








@foreach (var item in Model)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col col-float col-md-3 col-lg-3">
                @{
                    List<imageLink> image = item.imgLink.ToList();
                    string Title = item.Title;
                }
                @foreach (imageLink src in image)
                {
                    string url = Url.Content("~/Content/img/news/" + @src.Link);
                    <picture alt="Title" class="picterForNewsEditor">
                        <source src="@url" media="min-width:1170px">
                        <source src="@url" media="min-width:480px">
                        <source src="@url">
                        <!-- для браузеров не поддерживающих тег -->
                        <img src="@url">
                    </picture>
                }
            </div>
            <div class="col col-float col-md-4 col-lg-4">
                @Html.EditorFor(modelItem => item.Title)
            </div>
            <div class="col col-float col-md-4 col-lg-4">
                @Html.EditorFor(modelItem => item.Text)
            </div>
            <div class="col col-float col-md-4 col-lg-4">
                @Html.EditorFor(modelItem => item.Anonce)
            </div>
